<div class="row">
    <div class="card" style="width: 40rem;">
        <div class="card-body">
            <h3 class="card-title">Add a New Post:</h3>
            <form class="form new-post">
                <div class="form-group">
                    <label for="post-title">Title:</label>
                    <input class="form-control" type="text" id="post-title" name="post-title" />
                </div>
                <div class="form-group">
                    <label for="post-content">Post Content:</label>
                    <textarea class="form-control" id="post-content" name="post-content"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-dark">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row">
    {{#if posts.length}}
    <div class="card" style="width: 40rem;">
        <div class="post-list">
            <div class="card-body">
                <h3 class="card-title">Added Posts:</h3>
                {{#each posts as |post|}}
                <div class="row mb-2">
                    <div class="col-md-8">
                        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-sm btn-danger" id="delete-button"
                            delete-data-id="{{post.id}}">DELETE</button>
                        {{!-- <button class="btn btn-sm btn-danger" id="update-button"
                            update-data-id="{{post.id}}">EDIT</button> --}}
                    </div>
                </div>
                {{/each}}
            </div>
            {{/if}}
        </div>
    </div>
</div>
<script src="/js/post.js"></script>