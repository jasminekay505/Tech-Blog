<div class="row">
    <h2>Dashboard</h2>
</div>

<div class="row">
    {{#each user.posts as |post|}}

    <h2>Edit Post</h2>
    <div class="card">
        <div class="card-body">
            <form class="form edit-post-form">
                <form post-id="{{post.id}}">
                    <div class="form-group">
                        <label for="post-title">Title</label>
                        <input type="text" class="form-control post-title" value="{{post.title}}" required>
                    </div>
                    <div class="form-group">
                        <label for="post-content">Content</label>
                        <textarea class="form-control post-content" required>{{post.content}}</textarea>
                    </div>

                    <button class="btn btn-info updatePost">Update Post</button>
                    <button class="btn btn-info deletePost">Delete</button>
                </form>
        </div>
    </div>

    <button class="showPost btn btn-block btn-info d-flex justify-content-between mb-2">
        <span>{{post.title}}</span>
        <span>{{formatDate post.date_created}}</span>
    </button>

    {{/each}}

</div>

<div class="card d-none" id="new-post-form">
    <h4 class="card-header bg-info text-white">
        Create New Post
    </h4>
    <div class="card-body">
        <form class="mb-2">
            <div class="form-group">
                <label for="post-title">Title</label>
                <input type="text" class="form-control" id="post-title" required>
            </div>
            <div class="form-group">
                <label for="post-content">Content</label>
                <textarea class="form-control" id="post-content" required></textarea>
            </div>

            <button type="submit" class="btn btn-info new-post">Create</button>
        </form>
    </div>
</div>
<div class="row d-flex justify-content-center">
    <button class="btn btn-info mt-2" id="newPost">âž• New Post</button>
</div>
<script src="/js/post.js"></script>
