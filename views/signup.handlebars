<div class="container">
    <form class = "signup-form">
        <div class="form-group ">
            <label for="name-signup">Please enter your username: </label>
            <input type="username" class="form-control" id="name-signup">
        </div>
        <div class="form-group">
            <label for="email-signup">Please enter your email: </label>
            <input type="email" class="form-control" id="email-signup">
        </div>
        <div class="form-group">
            <label for="password-signup">Please enter your password: </label>
            <input type="password" class="form-control" id="password-signup">
        </div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>

</div>

<script src="../public/js/signup.js"></script>